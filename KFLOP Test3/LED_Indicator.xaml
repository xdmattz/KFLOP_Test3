<UserControl x:Class="KFLOP_Test3.LED_Indicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KFLOP_Test3"
             mc:Ignorable="d" d:DesignWidth="100" Height="25">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="25">
            <Image x:Name="LED_Image" Source="Small LED Off_b.png" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="25"/>
            <Label x:Name="lbl_LED_Text" Content="Label"/>
        </StackPanel>
    </Grid>
</UserControl>
