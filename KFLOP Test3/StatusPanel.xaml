        <Button x:Name="btnHomeA" Content="A" HorizontalAlignment="Left" Margin="373,98,0,0" VerticalAlignment="Top" Width="34" RenderTransformOrigin="0.467,-0.064" Height="21"/>
        <Button x:Name="btnHomeS" Content="Spin" HorizontalAlignment="Left" Margin="373,119,0,0" VerticalAlignment="Top" Width="34" RenderTransformOrigin="0.467,-0.064" Height="21" IsCancel="True" Click="btnHomeS_Click"/>
        <Button x:Name="btnHomeAll" Content="All" HorizontalAlignment="Left" Margin="373,145,0,0" VerticalAlignment="Top" Width="34" RenderTransformOrigin="0.467,-0.064" Height="21" Click="btnHomeAll_Click"/>
