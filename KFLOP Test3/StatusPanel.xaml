        <Button x:Name="btnLimZp" HorizontalAlignment="Left" Margin="281,97,0,0" VerticalAlignment="Top" BorderThickness="0" Click="btnLimZp_Click">
            <StackPanel Height="50" Width="50">
                <Image Source="LimY+ sm.png" />
            </StackPanel>
        </Button>
        <Button x:Name="btnLimZn" HorizontalAlignment="Left" Margin="281,158,0,0" VerticalAlignment="Top" BorderThickness="0" Click="btnLimZn_Click">
            <StackPanel Height="50" Width="50">
                <Image Source="LimY- sm.png" />
            </StackPanel>
        </Button>
        <Button x:Name="btnLimYp" HorizontalAlignment="Left" Margin="165,77,0,0" VerticalAlignment="Top" BorderThickness="0" Click="btnLimYp_Click">
            <StackPanel Height="50" Width="50">
                <Image Source="LimY+ sm.png" />
            </StackPanel>
        </Button>
        <Button x:Name="btnLimYn" HorizontalAlignment="Left" Margin="165,189,0,0" VerticalAlignment="Top" BorderThickness="0" Click="btnLimYn_Click">
            <StackPanel Height="50" Width="50">
                <Image Source="LimY- sm.png" />
            </StackPanel>
        </Button>
        <Button x:Name="btnLimXp" HorizontalAlignment="Left" Margin="220,133,0,0" VerticalAlignment="Top" BorderThickness="0" Click="btnLimXp_Click">
            <StackPanel Height="50" Width="50">
                <Image Source="LimX+ sm.png" />
            </StackPanel>
        </Button>
        <Button x:Name="btnLimXn" HorizontalAlignment="Left" Margin="109,133,0,0" VerticalAlignment="Top" BorderThickness="0" Click="btnLimXn_Click">
            <StackPanel Height="50" Width="50">
                <Image Source="LimX-a sm.png" />
            </StackPanel>
        </Button>
        <CheckBox x:Name="cbLimZ" Content="Z Limit" HorizontalAlignment="Left" Margin="281,76,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="cbLimY" Content="Y Limit" HorizontalAlignment="Left" Margin="168,61,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="cbLimX" Content="X Limit" HorizontalAlignment="Left" Margin="107,117,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbStatus1" HorizontalAlignment="Left" Height="23" Margin="29,229,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>

    </Grid>
</UserControl>
