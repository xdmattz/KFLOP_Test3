<UserControl x:Class="KFLOP_Test3.StatusPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KFLOP_Test3"
             mc:Ignorable="d" 
             d:DesignHeight="300" Width="446.471">
    <Grid>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="165" Margin="352,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="74"/>
        <Button x:Name="btnHomeX" Content="X" HorizontalAlignment="Left" Margin="373,35,0,0" VerticalAlignment="Top" Width="34" RenderTransformOrigin="0.467,-0.064" Height="21" Click="btnHomeX_Click"/>
