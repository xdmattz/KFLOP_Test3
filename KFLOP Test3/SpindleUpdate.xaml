<Window x:Class="KFLOP_Test3.SpindleUpdate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KFLOP_Test3"
        mc:Ignorable="d"
        Title="SpindleUpdate" Height="180" Width="300" ContentRendered="Window_ContentRendered">
    <Grid>
        <StackPanel>
            <Label Width="220" Height="60" >
                <TextBlock TextWrapping="Wrap" Text="Enter the new tool number or click Remove to set the tool number to '0'"/>
            </Label>
            <TextBox x:Name="tbNewToolNumber" Width="50" Height="27" />
            <StackPanel Margin="20" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnRemove" Content="Remove"  Height="30" Width="60" Margin="10,0,10,0" Click="btnRemove_Click"/>
                <Button x:Name="btnInsert" Content="Insert" Height="30" Width="60" Margin="10,0,10,0" Click="btnInsert_Click"/>
                <Button x:Name="bntCancel" Content="Cancel" Height="30" Width="60" Margin="10,0,10,0" Click="bntCancel_Click"/>

            </StackPanel>
        </StackPanel>



    </Grid>
</Window>
