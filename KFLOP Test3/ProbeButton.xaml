<UserControl x:Class="KFLOP_Test3.ProbeButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KFLOP_Test3"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="200">
    
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <!-- Image of the probing cycle - to be added at run time-->
        <Image x:Name="BtnImage" Grid.Column="0" Source="{Binding ButtonImage}"  />
        <!-- Text description -->
        <Label x:Name="BntLabel" Grid.Column="1" Content="{Binding ButtonText}"/>
        <Border BorderBrush="Black" BorderThickness="2" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="140" Width="190" VerticalAlignment="Top" />

    </Grid>
  
    <!-- Text description -->
</UserControl>
